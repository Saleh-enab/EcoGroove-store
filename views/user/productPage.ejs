<%- include('../partials/header') %>

    <div class="row">

        <h1 class="page-header">
            <%= p.title %>
        </h1>

        <div class="col-xs-12 col-md-5">
            <img class="spi" src="/images/<%= p.id %>/<%= p.image %>" alt="">
            <br>
        </div>
        <div class="col-xs-12 col-md-7">
            <p>
                <%= p.desc %>
            </p>
            <p>$<%= parseFloat(p.price).toFixed(2) %>
            </p>
            <p><a href="/cart/add/<%= p.id %>">Add to cart</a></p>
        </div>
        <div class="col-xs-12">
            <ul class="gallery">
                <% galleryImages.forEach(function(image){ %>
                    <li>
                        <a data-fancybox="gallery" href="/images/<%= p.id %>/gallery/<%= image %>">
                            <img src="/images/<%= p.id %>/gallery/thumb/<%= image %>" alt="">
                        </a>
                    </li>
                    <% }); %>
            </ul>
        </div>
    </div>

    <%- include('../partials/footer') %>